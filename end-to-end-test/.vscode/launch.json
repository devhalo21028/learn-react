  "version": "0.2.0",
  "configurations": [
    {
      "name": "my-api",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "args": ["src/bin/www.ts"],
      "cwd": "${workspaceRoot}/my-api",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    }
  ]
}